<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="ur5_control">
    <xacro:property name="robot_yaml" value="$(find ros2_descriptions)/config/ur5.yaml"/>
    <xacro:property name="config" value="${xacro.load_yaml(robot_yaml)}"/>

    <ros2_control name="UR5RobotSystem" type="system">
      <hardware>
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>

      <joint name="shoulder_pan_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
          <param name="initial_value">${config['initial']['shoulder_pan']}</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>

      <joint name="shoulder_lift_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
          <param name="initial_value">${config['initial']['shoulder_lift']}</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>

      <joint name="elbow_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
          <param name="initial_value">${config['initial']['elbow']}</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>

      <joint name="wrist_1_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
          <param name="initial_value">${config['initial']['wrist_1']}</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>

      <joint name="wrist_2_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
          <param name="initial_value">${config['initial']['wrist_2']}</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>

      <joint name="wrist_3_joint">
        <command_interface name="effort"/>
        <state_interface name="position">
          <param name="initial_value">${config['initial']['wrist_3']}</param>
        </state_interface>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>

    </ros2_control>

  </xacro:macro>

</robot>
